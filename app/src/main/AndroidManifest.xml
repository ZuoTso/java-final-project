            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LabelChooseActivity"
            android:label="標籤選擇"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".NearbyRestaurantList"
            android:exported="false"
